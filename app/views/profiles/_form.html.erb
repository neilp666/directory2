<%= simple_form_for(@profile, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :title, required: true, label: false, placeholder: "Job Title", input_html: {class: "form-control"} %>
    <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control", row: 7} %>
    <%= f.input :company, required: true, label: false, placeholder: "Company" , input_html: {class: "form-control"} %>
    <%= f.input :location, required: true, label: false, placeholder: "Location e.g London, UK", input_html: {class: "form-control"} %>
    <%= f.input :telephone, required: true, label: false, placeholder: "Telephone", input_html: {class: "form-control"} %>
    <%= f.input :website, required: true, label: false, placeholder: "Website", input_html: {class: "form-control"} %>
     <%= f.input :description, required: true, label: false, placeholder: "Main Job Description", input_html: {class: "form-control", row: 7} %>

  <%= f.button :submit, class: "btn btn-primary btn-block" %>
 
<% end %>
